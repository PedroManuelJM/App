<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.MenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <ImageButton
            android:id="@+id/ib_men_catalogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/producto"
            android:layout_weight="1"
            android:background="#0000"/>
        <ImageButton
            android:id="@+id/ib_men_carrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/carrito"
            android:layout_weight="1"
            android:background="#0000"/>
        <ImageButton
            android:id="@+id/ib_men_historial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/historial"
            android:layout_weight="1"
            android:background="#0000"/>
        <ImageButton
            android:id="@+id/ib_men_opciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/configuracion"
            android:layout_weight="1"
            android:background="#0000"/>
    </LinearLayout>
</FrameLayout>